    "api",
    "asp.net",
    "mvc",
    "app-router"
  ],
  "author": "Aron Kalo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/aronkalo/next-controllers.git"
  },
  "bugs": {
    "url": "https://github.com/aronkalo/next-controllers/issues"
  },
  "homepage": "https://github.com/aronkalo/next-controllers#readme",
